@model MahekaruProfileCore.Models.ProfileModel

@{
    ViewData["Title"] = "Index";
    //Layout = "";

    var skz = 0;

}

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stat Sheet</title>

    <link rel="stylesheet" href="~/css/profile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <wrapper>
        <profileinfo>
            <charinfo>
                <level>
                    <p>Level 70 Programmer</p>
                </level>
                <charprogress>
                    <char-slot>
                        <p>Name:</p>
                        <p>Exp:</p>
                    </char-slot>
                    <char-slot>
                        <p>Michael sssJennings</p>
                        <p>123</p>
                    </char-slot>
                </charprogress>
            </charinfo>
            <charstats>
                <charskills>

                    <ul>
                        @foreach (Skills i in Model.Skills.OrderByDescending(x => x.SkillPoints))
                        {
                            skz = (int)i.SkillPoints * 10;

                            <li>
                                <p>@i.Name</p>
                                <experiance>
                                    <experiance-bar green style="width:@skz%">@i.ExperianceLevel + @i.SkillPoints</experiance-bar>
                                </experiance>
                            </li>
                        }
                    </ul>
                </charskills>
                <charimg>
                    <box1>
                        <img-frame>
                            <img src="~/img/profile/ProfileImage.png" />
                        </img-frame>
                    </box1>
                    <box2>
                        <githubbutton>
                            Get Hub
                        </githubbutton>

                        <charhealth>
                            <charhealthbox>
                                <hptext>HP:</hptext>
                                <hpbox>
                                    <hp>123</hp>
                                    <experiance thin>
                                        <experiance-bar green style="width:100%"></experiance-bar>
                                    </experiance>
                                </hpbox>
                            </charhealthbox>
                            <charmpbox>
                                <mptext>MP:</mptext>
                                <mpbox>
                                    <mp>123</mp>
                                    <experiance thin>
                                        <experiance-bar blue style="width:100%"></experiance-bar>
                                    </experiance>
                                </mpbox>
                            </charmpbox>
                        </charhealth>
                    </box2>
                </charimg>
            </charstats>
        </profileinfo>
        <contactCard>
            <cc>
                <dbox></dbox>
                <ibox>
                    <nbox>
                        <nbname>Michael Jennings</nbname>
                        <nbtitle>Web Developer</nbtitle>
                    </nbox>
                    <cbox>
                        <ul>
                            <li>
                                <cicon phone class="fa fa-phone" style="font-size:36px"></cicon>
                                <ctext>(317) 626-8984</ctext>
                            </li>
                            <li>
                                <cicon class="fa fa-envelope-square" style="font-size:36px"></cicon>
                                <ctext><a href="mailto:MichaelEJennings@yahoo.com">MichaelEJennings@yahoo.com</a></ctext>
                            </li>
                            <li>
                                <cicon class="fa fa-linkedin-square" style="font-size:36px"></cicon>
                                <ctext><a href="www.linkedin.com/in/michaelejennings42">Linked In</a></ctext>
                            </li>
                            <li>
                                <cicon class="fa fa-github-square" style="font-size:36px"></cicon>
                                <ctext><a href="https://github.com/MichaelEJennings">Git hub</a></ctext>
                            </li>
                        </ul>
                    </cbox>
                </ibox>
            </cc>
