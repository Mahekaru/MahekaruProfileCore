@model MahekaruProfileCore.Models.ProfileModel

@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stat Sheet</title>

    <link rel="stylesheet" href="~/css/profile.css">
</head>
<body>
    <div class="container" style="margin-top:5px;margin-bottom:20px;height:100%;">
        <div class="row">
            <div class="col-sm-8 border">
                @*Contains first 1/2 (skills and image)*@
                <div class="row">
                    <div class="col-4 col-sm-4 border-right">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <p class="removeBasement">@Model.Title</p>
                            </div>
                        </div>
                    </div>
                    @*Name and progress bar*@
                    <div class="col-8 col-sm-8">
                        <div class="row">
                            <p style="padding-left:15px; margin-bottom:2px;">Name :  <h5>@Model.Name</h5></p>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-1">
                                <p style="margin-bottom:0px">EXP:</p>
                            </div>
                            <div class="col-11">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 38.80%;" aria-valuenow="38.80" aria-valuemin="0" aria-valuemax="100">@Model.Exp / @Model.ExpTotal</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @*Skill List*@
                <div class="row">
                    <div class="col-4 col-sm-4 noPad" style="overflow:auto">
                        <div style="height:500px;width:100%;display:flex;">
                            <ul class="list-group" id="ulGroup" style="width:100%"></ul>
                        </div>
                    </div>
                    @*Image Block*@
                    <div class="col-8 col-sm-8 border-top">
                        <div class="row">
                            <div class="text-center" style="height:100%;width:100%;padding-top:10%;padding-bottom:10%;">
                                <img class="img-fluid" style="max-width:100%;height:auto;" src="@Model.ProfileImage" />
                            </div>
                        </div>
                        @*Github button*@
                        <div class="row">
                            <a class="btn btn-primary btn-block" href="@Model.GitHub" target="_blank">Git Hub</a>
                            @*<button type="button" class="btn btn-primary btn-block">Git Hub</button>*@
                        </div>
                        @*HP and MP bars*@
                        <div class="row border-top" style="margin-top:5px;">
                            <div class="col-6">
                                <p style="float:Left;margin-bottom:5px;">HP</p>
                                <span style="padding-left:55px;">@Model.HP</span>
                                <div class="progress" style="height:2px;">
                                    <div class="progress-bar hpGrean" role="progressbar" style="width: 100%; height:2px" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="col-6" style="margin-bottom:5px;">
                                <p style="float:Left;margin-bottom:5px;">MP:</p>
                                <span style="padding-left:55px;">@Model.MP</span>
                                <div class="progress" style="height:2px;">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: 100%; height:2px" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 border flex-column">
                <div class="row">
                    <div class="col-sm-12 border-bottom">
                        <h4 class="text-center">Contact Card</h4>
                        <p class="removeBasement">Email : MichaelEJennings@yahoo.com</p>
                        <p class="removeBasement"> Cell : 317-626-8984</p>
                        <a class="fa fa-github fa-2x" aria-hidden="true" target="_blank" href="https://github.com/MichaelEJennings"></a>
                        <a class="fa fa-linkedin fa-2x" aria-hidden="true" target="_blank" href="https://www.linkedin.com/in/michaelejennings42/"></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4>Web Apps</h4>
                        <img class="img-fluid" style="max-width:100%;height:auto;" src="~/img/WebApp-Photo.jpg" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4>Application Dev</h4>
                        <img class="img-fluid" style="max-width:100%;height:auto;" src="~/img/Desktop-Photo.jpg" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4>Gaming</h4>
                        <img class="img-fluid" style="max-width:100%;height:auto;" src="~/img/Games-Photo.jpg" />
                    </div>
                </div>
            </div>

        </div>


    </div>
    <script src="~/js/profile.js"></script>
</body>
</html>
